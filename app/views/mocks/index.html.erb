<div id="result" data-turbolinks-temporary>
  <% if flash[:new] %>
      Created new mock. Send your requests to <%= link_to flash[:new] %>.
  <% end %>
</div>

<div>
  <%= form_for @new_mock do |f| %>
      <%= f.label :statuscode %>:
      <%= f.text_field :statuscode %><br />

      <%= f.label :contenttype %>:
      <%= f.text_field :contenttype %><br />

      <%= f.label :body %>:
      <%= f.text_area :body, cols: 50, rows: 10 %><br />

      <%= f.submit %>
  <% end %>
</div>