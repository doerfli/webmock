<% content_for :header do %>
    <div class="jumbotron">
      <div class="container">
        <h1>Statistics</h1>
      </div>
    </div>
<% end %>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <% @stats.each{ |name,value| %>
        <tr>
          <td><%= name.humanize %></td>
          <td><%= value %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>