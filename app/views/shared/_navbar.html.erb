<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to :root, :class => 'navbar-brand' do %>
        <i class="fa fa-cube"></i> <%=t 'navbar.title' %>
      <% end %>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if (controller_name.eql? 'mocks') && action_name.in?( %w(show history)) %>
            <li class="<%= 'active' if action_name.eql? 'show' %>"><%= link_to mock_path(@mock), :title => t('navbar.mock.detail_title') do %><%= fa_icon 'newspaper-o' %> <%=t 'navbar.mock.detail' %><% end %></li>
            <li class="<%= 'active' if action_name.eql? 'history' %>"><%= link_to history_mock_path(@mock), :title => t('navbar.mock.history_title') do %><%= fa_icon 'history'%> <%=t 'navbar.mock.history' %><% end %></li>
            <li ><%= link_to root_path, :title => t('navbar.mock.new_title') do %><%= fa_icon 'file-text-o'%> <%=t 'navbar.mock.new' %><% end %></li>
        <% end %>
      </ul>
      <form action="<%= search_mocks_path %>" class="navbar-form navbar-right search" role="search" method="get">
        <div class="form-group">
          <input
            name="term"
            type="text"
            class="form-control"
            placeholder="<%=t 'navbar.enter_id' %>"
            title="<%=t 'navbar.enter_id_help' %>"
            size="36"
            value="<%= flash[:term] if flash[:term] %>"
          >
        </div>
      </form>
    </div><!--/.nav-collapse -->
  </div>
</nav>